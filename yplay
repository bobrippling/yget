#!/bin/sh

[ $# -eq 1 ] || { echo "usage: $0 URL"; exit 1; }

yurl "$1" |awk '
function fix() {
	gsub("'\''","")
}
/^url34/ {
	fix()
	url=$2
}
/^url5/ && !url {
	fix()
	url=$2
}
/^title/ {
	fix()
	sub(/^title[ \t]*/,"")
	title="MPlayer - " $0
}
{
	print
}

END {
if (url)
	system("mplayer -prefer-ipv4 -cache 32768 -cache-min 1 -cache-seek-min 10 -title '\''" title "'\'' '\''" url "'\''")
}'
